<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hellen.practica_sabado.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_stat_Nuevo"
            android:id="@+id/btn_aÃ±adir"
             />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_stat_Trazo"
            android:id="@+id/btn_Trazo"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_Borrar"  />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_Borrar"  />
    </LinearLayout>

    <com.example.hellen.practica_sabado.Lienzo
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_height="0dp"
        android:id="@+id/lienzo"
        android:background="#FFFFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/AlturaColor"
            android:id="@+id/ibtn_colnegro"
            android:tag="#FF000000"
            android:background="#FF000000" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/AlturaColor"
            android:id="@+id/ibtn_Colblanco"
            android:tag="#FFFFFFFF"
            android:background="#FFFFFFFF" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/AlturaColor"
            android:id="@+id/ibtn_colazul"
            android:tag="#FF0000FF"
            android:background="#FF0000FF"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/AlturaColor"
            android:id="@+id/ibtn_colrojo"
            android:tag="#FFFF0000"
            android:background="#FFFF0000" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/AlturaColor"
            android:id="@+id/ibtn_colverde"
            android:tag="#FF00FF00"
            android:background="#FF00FF00"/>
    </LinearLayout>
</LinearLayout>
